<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/action_all_grad">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:onClick="push_back"
            android:src="@mipmap/ic_arrow_back"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="페이스북 계정"
            android:textSize="25dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/action_shadow_grad"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_setting_facebook"
                android:id="@+id/imageView2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="70dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="sdsd"
                android:id="@+id/textView6"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="85dp"
                android:textSize="15dp"
                android:textColor="#7a7a7a"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.36"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="페이스북 계정이 연동되어"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="90dp"
                android:textColor="#7a7a7a"
                android:textSize="15dp"
                android:id="@+id/tvtv" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#9f9c9c"
                android:layout_marginTop="18dp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.19">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="페이스북 연동"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#616161"/>

                <ToggleButton
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggleButton"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="15dp"
                    android:textOn="ON"
                    android:textOff="OFF"
                    android:textColor="@color/blue"
                    android:background="@color/white"/>



            </LinearLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#9f9c9c"
                android:layout_marginTop="1dp"
                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
