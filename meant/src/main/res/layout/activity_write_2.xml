<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.florent37.materialviewpager.sample.CommentActivity"
    android:background="@drawable/comment_back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:focusable="false"
        android:orientation="horizontal"
        android:background="@drawable/action_all_grad">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:onClick="push_back"
            android:src="@mipmap/ic_arrow_back"
            android:id="@+id/w2_back"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:src="@mipmap/action_title"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/w2_back"
            android:layout_toEndOf="@+id/w2_back"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="21dp" />
    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/xml_comment_border">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:focusable="false">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="취소"
                android:id="@+id/w2_cancel"
                android:onClick="push_exit"
                android:clickable="true"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_margin="7dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="right"
            android:focusable="false"
            android:layout_weight="1"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="다음"
                android:onClick="push_next"
                android:id="@+id/w2_next"
                android:clickable="true"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_margin="7dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="2dp"
        android:background="@drawable/xml_img_border">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:id="@+id/wr2_iv"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:layout_marginBottom="2dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="1dp"
        android:background="@drawable/comment_back">
        <GridView
            android:id="@+id/gridViewImages"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="72dp"
            android:numColumns="4"
            android:layout_margin="5dp"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
