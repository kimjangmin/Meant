<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:CardView="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="1dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="-2dp"
        app:cardMaxElevation="-7dp"
        CardView:cardUseCompatPadding="true"
        app:contentPaddingTop="0dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FF0000"
            android:scaleType="fitXY"
            android:id="@+id/best_image"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ranking_back"
            android:id="@+id/best_ranking_back"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_ranking_color"
            android:id="@+id/best_ranking_color"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016.01.01"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="3dp"
            android:id="@+id/best_date"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:id="@+id/best_lay">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#00FF0000"
                android:layout_gravity="right"
                android:layout_marginRight="5dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:clickable="true"
                    android:id="@+id/w2_share"
                    android:src="@mipmap/ic_share"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#00FF0000"
                android:layout_gravity="right"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:id="@+id/best_comment_num"
                    android:padding="2dp"
                    android:layout_marginRight="4dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_reply"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#00FF0000"
                android:layout_gravity="right"
                android:id="@+id/best_heart_lay"
                android:clickable="true"
                android:layout_marginRight="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:id="@+id/best_heart_num"
                    android:padding="2dp"
                    android:layout_marginRight="4dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/best_heart_toggle"
                    android:src="@mipmap/ic_like"/>

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>